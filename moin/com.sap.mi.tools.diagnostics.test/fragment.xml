<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<fragment>

 <extension
     point="com.sap.ide.junit.insideTests">
 	<testsuite
        class="com.sap.mi.tools.diagnostics.test.DiagnosticsTestSuite"
        name="Moin in Eclipse: Diagnostic View"
        runMode="otherThread"
        runModeForNestedTests="otherThread"/>
 </extension>
   
<!-- =================================================================================== -->
<!-- Perspective                                                                         -->
<!-- =================================================================================== -->
  <extension point="org.eclipse.ui.perspectives">
    <perspective
          class="com.sap.mi.tools.diagnostics.test.DiagnosticsTestPerspective"
          icon="resources/icons/DiagPerspective.gif"
          id="com.sap.mi.tools.diagnostics.test.perspective"
          name="Diagnostics Test Perspective "/>
  </extension>
   

</fragment>
