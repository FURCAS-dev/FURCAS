    <plugin-suite>com.sap.tc.moin.repository.test.eclipse.plugin.TestSuitePlugin</plugin-suite>
    <code-coverage>com.sap.tc.moin.metamodel.textverticalization;com.sap.tc.moin.libraries.buildplugin;com.sap.tc.moin.facility.primary.internal;com.sap.tc.moin.facility.primary;com.sap.tc.moin.runtime;com.sap.tc.moin.facility.primary.libraries;com.sap.tc.moin.libraries.api;com.sap.tc.moin.libraries.base;com.sap.tc.moin.libraries.core;com.sap.tc.moin.libraries.jmi;com.sap.tc.moin.libraries.spi;com.sap.tc.moin.friends.api;com.sap.tc.moin.friends.factory;com.sap.tc.moin.friends.ide.factory;com.sap.tc.moin.libraries.spi.internal;com.sap.tc.moin.facility.build.libraries</code-coverage> 
    
    <jvmArg>-Dmoin.test.configuration=eclipseRuntimeTestConfiguration.properties</jvmArg>
    <jvmArg>-XX:MaxPermSize=96m</jvmArg>
    <jvmArg>-ea</jvmArg>
    <jvmArg>-Xmx1024M</jvmArg>
    <jvmArg>-Dcom.sun.management.jmxremote</jvmArg>
  </run>

