  <run type="junit4_ec" purpose="nwdi">
    <required>devtest.masstest.properties</required>
    
    <!--
This system property identifies a property file location, whithout this the test is skipped.
The property file should contain a property "moinnwdiparams" naming another property file in 
the same directory, which is required to contain the properties needed to connect to the test track.
These are the mandatory parameters for connecting to an nwdi track:
    ext.sys.test.nwdi.username=someValidUserid
    ext.sys.test.nwdi.userpassword=someValidPassword
    ext.sys.test.nwdi.landscapeDirectoryURL=http://somelandscape:port
    ext.sys.test.nwdi.devConfigurationName=DEV_CONFIG_ID
    ext.sys.test.nwdi.editableSoftwareComponentName=TESTCOMP     -->
    <timeout>1500</timeout>

    <name>MOIN: Support of NWDI scenario  [Test Suite ID: NWDS_MOIN_002]</name>
    <plugin-name>com.sap.tc.moin.repository.test.MoinTestEclipsePlugin</plugin-name>
    <plugin-suite>com.sap.tc.moin.repository.test.eclipse.plugin.TestSuitePluginNwdiTest</plugin-suite>
    <code-coverage>com.sap.tc.moin.versioning.di</code-coverage> 
    
    <jvmArg>-Dmoin.test.configuration=eclipseRuntimeTestConfiguration.properties</jvmArg>
    <jvmArg>-XX:MaxPermSize=96m</jvmArg>
    <jvmArg>-ea</jvmArg>
    <jvmArg>-Xmx1024M</jvmArg>
    <jvmArg>-Dcom.sun.management.jmxremote</jvmArg>
  </run>
  
<!-- PERFORMANCE -->
