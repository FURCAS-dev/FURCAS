<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.emf.ocl.examples" default="zip.examples" basedir=".">
	<target name="init">
	</target>

	<target name="zip.examples" depends="init">
		<zip destfile="zips/interpreter.zip" basedir="../org.eclipse.emf.ocl.examples.interpreter">
			<exclude name="src.zip"/>
			<exclude name="build.xml"/>
			<exclude name="javaCompiler...args"/>
			<exclude name="temp.folder/**"/>
			<exclude name="@dot/**"/>
		</zip>
		<zip destfile="zips/library.zip" basedir="../org.eclipse.emf.examples.library"/>
		<zip destfile="zips/libraryEdit.zip" basedir="../org.eclipse.emf.examples.library.edit"/>
		<zip destfile="zips/libraryEditor.zip" basedir="../org.eclipse.emf.examples.library.editor"/>
		<antcall target="refresh"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.eclipse.emf.ocl.examples.">
		<delete>
			<fileset dir="zips" includes="*.zip"/>
		</delete>
		<antcall target="refresh"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.refreshLocal resource="/org.eclipse.emf.ocl.examples" depth="infinite"/>
	</target>
</project>
