<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<fragment>
     <extension
           point="com.sap.ide.junit.insideTests">
        <testsuite
              class="com.sap.mi.gfw.test.MiGfwTestSuite"
              name="MIE Graphics Framework All Tests"
              runMode="otherThread"
              runModeForNestedTests="otherThread">
        </testsuite>
        <testsuite
              class="com.sap.mi.gfw.test.smoke.MiGfwSmokeTestSuite"
              name="MIE Graphics Framework Smoke Tests">
        </testsuite>
     </extension>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.sap.mi.gfw.test.GfwTestPerspective"
            fixed="false"
            id="com.sap.mi.gfw.test.GfwTestPerspective"
            name="Test GFW"/>
   </extension>

</fragment>
