<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Bibtex Text Editor"
            extensions="bib"
            class="com.sap.furcas.example.bibtex.dsl.editor.BibtexEditor"
            id="bibtex.dsl.editor.BibtexEditor">
      </editor>
   </extension>
   <extension
         point="com.sap.ide.cts.parser.parserFactory">
      <configuration
            languageID="Bibtex"
            dynamicParserFactoryClass="com.sap.furcas.example.bibtex.dsl.parser.BibtexParserFactory">
      </configuration>
   </extension>
   <extension
         point="com.sap.furcas.ide.editor.autoEditing">
      <configuration
            autoIndentBraces="{,}"
            autoEditingType="static (configurable)">
      </configuration>
   </extension>
   <extension
         point="com.sap.furcas.ide.editor.bracketMatching">
      <configuration
            matchingType="configurable"
            matchingBrackets="{}[]()">
      </configuration>
   </extension>
   <extension
         point="com.sap.furcas.ide.editor.folding">
      <configuration
            foldingType="static (configurable)"
            staticFoldingBrackets="{,}">
      </configuration>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="com.sap.furcas.example.bibtex.dsl.editor.BibtextParseController"
            language="Bibtex">
      </parser>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            extensions="bib"
            description="some thing"
            language="Bibtex">
      </language>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer
            class="com.sap.furcas.example.bibtex.dsl.imp.tokenColorer.BibtexTokenColorer"
            language="Bibtex">
      </tokenColorer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.contentProposer">
      <proposer
            class="com.sap.furcas.example.bibtex.dsl.editor.BibtexContentProposer"
            language="Bibtex">
      </proposer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.modelTreeBuilder">
      <treeBuilder
            class="com.sap.furcas.ide.editor.imp.services.FurcasTreeModelBuilder"
            language="Bibtex">
      </treeBuilder>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.labelProvider">
      <labelProvider
            class="com.sap.furcas.example.bibtex.dsl.imp.treeModelBuilder.BibtexLabelProvider"
            language="Bibtex">
      </labelProvider>
   </extension>
   
    <extension point="com.sap.furcas.runtime.referenceresolving.furcas_syntax">
       <furcas_syntax provider_class="com.sap.furcas.example.bibtex.dsl.editor.Activator">
       	 <metamodel nsURI="http://www.sap.com/furcas/examples/bibtex" />
       </furcas_syntax>
 	</extension> 

</plugin>
