<?xml version="1.0" encoding="UTF-8"?>
<project name="TCSBootstrap" default="generate">
	
	
	<target name="clean">
		<delete file="../bootstrap/TCS.g">
		</delete>
	</target>
		
	<target name="generate" depends="clean">
		<echo>Cannot bootstrap from ant until sap libraries have been added to classpath below.</echo>
	</target>
		
	<target name="NotWorking">
		<java fork="true" classname="com.sap.mi.textual.bootstrap.TCSBootStrap" dir="..">
	         <classpath>
	         	<pathelement path="${classpath}"/>
	         	<fileset dir="../lib">
         	        <include name="**/*.jar"/>
         	    </fileset>
	         	<fileset dir="../../com.sap.mi.textual.parsing/lib">
	         		<include name="**/*.jar"/>
	         	</fileset>
	         	<pathelement location="../bin"/>
	         	<pathelement location="../../com.sap.mi.textual/bin"/>
	         	<pathelement location="../../com.sap.mi.textual.common/bin"/>
	         	<pathelement location="../../com.sap.mi.textual.grammar.parser/bin"/>
	         	<pathelement location="../../com.sap.mi.textual.parsing/bin"/>
	         	<pathelement location="../../com.sap.mi.textual.syntaxmodel/bin"/>
	         	
	         </classpath>
	    </java>
		<echo>Generated TCS.g in folder bootstrap.</echo>
	</target>
</project>
