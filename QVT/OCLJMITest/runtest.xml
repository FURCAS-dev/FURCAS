<project name="OCLEMFTest" default="doAll" basedir=".">
	<description> 
		project for running OCLEMFTest = ${ant.project.name}
	</description>
	

	<property name="build.artifactsDir" value="c:/emftest"/>


	<target name="init" description="initialization">
	</target>

	<target name="doAll" depends="init" description="doAll">

		<echo message="compile EMF tests..." />
		<ant inheritAll="false" antfile="${basedir}/build.xml">
			<property name="build.artifactsDir" value="${build.artifactsDir}"/>
		</ant>
		
		<echo message="starting non-reflective tests..." />

		<ant inheritAll="false" antfile="${build.artifactsDir}/${ant.project.name}/build.xml">
			<property name="doReflective" value="false"></property>
			<property name="build.artifactsDir" value="${build.artifactsDir}"/>
		</ant>
		
		<echo message="starting reflective tests..." />
		<ant inheritAll="false" antfile="${build.artifactsDir}/${ant.project.name}/build.xml">
			<property name="doReflective" value="true"></property>
			<property name="build.artifactsDir" value="${build.artifactsDir}"/>
		</ant>

	</target>

</project>
