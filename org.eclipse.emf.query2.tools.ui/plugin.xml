<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipse.emf.query2.internal.ui.QueryResultView"
            id="org.eclipse.emf.query2.tools.ui.queryresultview"
            name="Query Result View"
            restorable="true">
      </view>
       <view
            class="org.eclipse.emf.query2.internal.ui.QueryView"
            id="org.eclipse.emf.query2.tools.ui.queryview"
            name="Query View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.emf.query2.tools.ui.popup.openInEditor"
            name="Open In Editor">
      </command>
      <command
            id="org.eclipse.emf.query2.tools.ui.refreshQueryView"
            name="Refresh Query View">
         <commandParameter
               id="refreshDirty"
               name="Refresh Dirty"
               optional="true">
         </commandParameter>
      </command>
      <command
            id="org.eclipse.emf.query2.tools.ui.runQuery"
            name="Run Query">
      </command>
      <command
            id="org.eclipse.emf.query2.tools.ui.runQuery"
            name="Run Query With Dirty State">
         <commandParameter
               id="runDirty"
               name="Run Dirty"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.emf.query2.internal.ui.handlers.OpenQueryInEditor"
            commandId="org.eclipse.emf.query2.tools.ui.popup.openInEditor">
         <activeWhen>
            <with
                  variable="selection">
               <and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="org.eclipse.emf.query2.internal.ui.QueryView$QueryItem">
                     </instanceof>
                  </iterate>
                  <count
                        value="1">
                  </count>
               </and>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.eclipse.emf.query2.internal.ui.handlers.RefreshQueryView"
            commandId="org.eclipse.emf.query2.tools.ui.refreshQueryView">
      </handler>
      <handler
            class="org.eclipse.emf.query2.internal.ui.handlers.RunQuery"
            commandId="org.eclipse.emf.query2.tools.ui.runQuery">
         <activeWhen>
            <with
                  variable="selection">
               <or>
                  <and>
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <instanceof
                              value="org.eclipse.emf.query2.internal.ui.QueryView$QueryItem">
                        </instanceof>
                     </iterate>
                     <count
                           value="1">
                     </count>
                  </and>
                  <instanceof
                        value="org.eclipse.jface.text.ITextSelection">
                  </instanceof>
               </or>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.emf.query2.tools.ui.queryview">
         <command
               commandId="org.eclipse.emf.query2.tools.ui.popup.openInEditor"
               icon="icons/file.gif"
               label="Open In Editor"
               style="push">
         </command>
         <command
               commandId="org.eclipse.emf.query2.tools.ui.runQuery"
               icon="icons/run.gif"
               label="Run Query"
               style="push">
            <parameter
                  name="runDirty"
                  value="false">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.emf.query2.tools.ui.runQuery"
               icon="icons/runDirty.gif"
               label="Run Query on Dirty State"
               style="push">
            <parameter
                  name="runDirty"
                  value="true">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.emf.query2.tools.ui.queryview">
         <command
               commandId="org.eclipse.emf.query2.tools.ui.refreshQueryView"
               icon="icons/refresh.gif"
               label="Refresh"
               style="push">
            <parameter
                  name="refreshDirty"
                  value="false">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.emf.query2.tools.ui.refreshQueryView"
               icon="icons/refreshDirty.gif"
               label="Refresh dirty"
               style="push"
               tooltip="Refresh dirty">
            <parameter
                  name="refreshDirty"
                  value="true">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
         <command
               commandId="org.eclipse.emf.query2.tools.ui.runQuery"
               icon="icons/run.gif"
               label="Run Query"
               style="push"
               tooltip="Trigger expensive validation">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.eclipse.emf.query2.Query.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.emf.query2.internal.ui.QueryPerspectiveFactory"
            icon="icons/magnifying-glass.gif"
            id="org.eclipse.emf.query2.tools.ui.queryperspective"
            name="Query">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.emf.query2.tools.ui.queryperspective">
         <view
               id="org.eclipse.emf.query2.tools.ui.queryview"
               minimized="false"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.emf.query2.tools.ui.queryresultview"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.ui.views.ContentOutline"
               minimized="false"
               ratio="0.75"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
         <perspectiveShortcut
               id="org.eclipse.jdt.ui.JavaPerspective">
         </perspectiveShortcut>
         <viewShortcut
               id="org.eclipse.emf.query2.tools.ui.queryview">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.emf.query2.tools.ui.queryresultview">
         </viewShortcut>
         <viewShortcut
               id="org.eclipse.ui.views.ContentOutline">
         </viewShortcut>
      </perspectiveExtension>
   </extension>
 

</plugin>
